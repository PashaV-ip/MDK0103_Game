<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="#DC8484"
    tools:context=".GameWindow">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="786dp"
        android:layout_height="434dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.521"
        app:srcCompat="@drawable/back_ground_game" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="57dp"
        android:layout_height="53dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/food" />

    <TextView
        android:id="@+id/foodNums"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:text="150"
        android:textColor="#FFFFFF"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView5"
        app:layout_constraintEnd_toStartOf="@+id/imageView5" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="57dp"
        android:layout_height="53dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/foodNums"
        app:layout_constraintEnd_toStartOf="@+id/foodNums"
        app:srcCompat="@drawable/water_bottle" />

    <TextView
        android:id="@+id/waterNums"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:text="150"
        android:textColor="#FFFFFF"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView6"
        app:layout_constraintEnd_toStartOf="@+id/imageView6"
        tools:text="150" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="57dp"
        android:layout_height="53dp"
        android:layout_marginStart="64dp"
        android:layout_marginEnd="144dp"
        app:layout_constraintBottom_toBottomOf="@+id/waterNums"
        app:layout_constraintEnd_toStartOf="@+id/waterNums"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/humans_imgae" />

    <TextView
        android:id="@+id/humanNums"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:text="25"
        android:textColor="#FFFFFF"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView7"
        app:layout_constraintEnd_toStartOf="@+id/imageView7" />

    <Button
        android:id="@+id/noteBook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="160dp"
        android:layout_marginEnd="20dp"
        android:text="Блокнот"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/imageView5"
        app:layout_constraintTop_toBottomOf="@+id/imageView5" />

    <Button
        android:id="@+id/sortieButtons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Вылазка"
        app:layout_constraintBottom_toBottomOf="@+id/scoutingButtons"
        app:layout_constraintStart_toEndOf="@+id/scoutingButtons" />

    <Button
        android:id="@+id/scoutingButtons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Разветка"
        app:layout_constraintBottom_toBottomOf="@+id/wait"
        app:layout_constraintStart_toEndOf="@+id/wait" />

    <Button
        android:id="@+id/wait"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ждать"
        app:layout_constraintBottom_toBottomOf="@+id/noteBook"
        app:layout_constraintEnd_toStartOf="@+id/noteBook"
        app:layout_constraintHorizontal_bias="0.11"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>